{
  "name": "inryuk-office-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/dev.ps1",
    "dev:backend": "npm --workspace backend run dev:safe",
    "dev:backend:watch": "npm --workspace backend run dev",
    "dev:backend:safe": "npm --workspace backend run dev:safe",
    "dev:frontend": "npm --workspace frontend run dev",
    "dev:safe": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/dev.ps1",
    "build": "npm --workspace backend run build && npm --workspace frontend run build"
  },
  "devDependencies": {
    "browserslist": "^4.28.1",
    "caniuse-lite": "^1.0.30001770",
    "concurrently": "^9.0.1"
  }
}
